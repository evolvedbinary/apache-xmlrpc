    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <xmlrpc.www.url>scp://people.apache.org/www/ws.apache.org/xmlrpc</xmlrpc.www.url>
    <xmlrpc.www.id>people.apache.org</xmlrpc.www.id>
